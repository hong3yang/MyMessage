<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout


        android:id="@+id/music_effect_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="均衡器："/>

        <yang.hong3.com.mymessage.customview.MyEffectLayoutView
            android:id="@+id/effectLayoutView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </yang.hong3.com.mymessage.customview.MyEffectLayoutView>

        <yang.hong3.com.mymessage.customview.MyEffectLayoutView
            android:id="@+id/effectLayoutView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </yang.hong3.com.mymessage.customview.MyEffectLayoutView>

        <yang.hong3.com.mymessage.customview.MyEffectLayoutView
            android:id="@+id/effectLayoutView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </yang.hong3.com.mymessage.customview.MyEffectLayoutView>

        <yang.hong3.com.mymessage.customview.MyEffectLayoutView
            android:id="@+id/effectLayoutView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </yang.hong3.com.mymessage.customview.MyEffectLayoutView>

        <yang.hong3.com.mymessage.customview.MyEffectLayoutView
            android:id="@+id/effectLayoutView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </yang.hong3.com.mymessage.customview.MyEffectLayoutView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音效："/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重低音："/>

        <SeekBar
            android:id="@+id/bassboost_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="1000"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>


    </LinearLayout>
</ScrollView>



