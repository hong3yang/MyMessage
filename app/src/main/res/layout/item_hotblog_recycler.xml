<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <ImageView
        android:id="@+id/hotblog_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/hotblog_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/hotblog_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hotblog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="jkdshfjk很多时间发货是就是说"
            android:textColor="@android:color/background_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/hotblog_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="moxun"
                />

            <TextView
                android:id="@+id/hotblog_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2017-01-12T11:30:59.36"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>